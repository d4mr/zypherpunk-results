<header class="sticky top-0 z-50 border-b border-gray-800/50 bg-black/60 backdrop-blur-xl">
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="logo-link group relative font-display text-xl">
        <span class="logo-text relative inline-flex items-baseline">
          <span class="logo-z relative italic text-accent">
            Z
            <span class="logo-z-shadow absolute inset-0 italic text-accent blur-sm">Z</span>
          </span>
          <span class="italic text-white transition-colors duration-300 group-hover:text-gray-300">ypherpunk</span>
        </span>
        
        <!-- Glitch layers -->
        <span class="logo-glitch logo-glitch-1 absolute inset-0 italic text-accent opacity-0" aria-hidden="true">
          Zypherpunk
        </span>
        <span class="logo-glitch logo-glitch-2 absolute inset-0 italic text-[#ff00ff] opacity-0" aria-hidden="true">
          Zypherpunk
        </span>
      </a>
      
      <!-- Navigation -->
      <nav class="flex items-center gap-1">
        <a href="/" class="nav-link group relative px-4 py-2 text-sm text-gray-400 transition-colors hover:text-white">
          <span class="relative z-10">Winners</span>
          <span class="nav-link-bg absolute inset-0 rounded-lg bg-white/5 opacity-0 transition-opacity group-hover:opacity-100"></span>
        </a>
        
        <a 
          href="https://zypherpunk.devfolio.co" 
          target="_blank" 
          rel="noopener" 
          class="nav-link group relative flex items-center gap-1.5 px-4 py-2 text-sm text-gray-400 transition-colors hover:text-white"
        >
          <span class="relative z-10">Devfolio</span>
          <svg class="relative z-10 h-3 w-3 opacity-50 transition-all group-hover:translate-x-0.5 group-hover:-translate-y-0.5 group-hover:opacity-100" viewBox="0 0 12 12" fill="none">
