---
import { renderMarkdown } from "../lib/markdown";

interface Props {
  content: string;
  class?: string;
}

const { content, class: className = "" } = Astro.props;
const html = await renderMarkdown(content);
---

<div
  class:list={[
    "prose-custom",
    className,
  ]}
  set:html={html}
/>
