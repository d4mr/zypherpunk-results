            <div class="text-white">
              {builders.map((b) => b.first_name || b.username).join(", ")}
            </div>
            <div class="text-xs text-muted-foreground">
              {builders.length === 1 ? "Builder" : "Builders"}
            </div>
          </div>
        </div>

        <!-- Hashtags -->
        {hashtags.length > 0 && (
          <div class="flex flex-wrap gap-1.5">
            {hashtags.map((tag) => (
              <span class="rounded-full border border-gray-800 bg-gray-900 px-2.5 py-1 text-xs text-muted-foreground">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Awards section -->
      {awards && awards.awards.length > 0 && (
        <AwardsSection 
          client:load
          awards={awards.awards}
          sponsorsMap={sponsorsMap}
          bountiesMap={bountiesMap}
        />
      )}

      <!-- Description -->
      {project.description && project.description.length > 0 && (
        <section class="mb-10 space-y-8">
          {project.description.map((block) => (
            <div>
              <h2 class="mb-4 border-b border-gray-800 pb-2 font-display text-xl text-white">
                {block.title}
              </h2>
              <MarkdownContent content={block.content} />
            </div>
          ))}
        </section>
      )}

      <!-- Gallery -->
      {pictures.length > 0 && (
        <section>
          <h2 class="mb-4 font-display text-xl text-white">Gallery</h2>
          <div class="grid gap-3 sm:grid-cols-2">
            {pictures.map((pic, i) => (
              <a
                href={pic}
                target="_blank"
                rel="noopener"
                class="overflow-hidden rounded-lg border border-gray-800 transition-colors hover:border-gray-700"
              >
                <Image 
                  src={pic} 
                  alt={`${project.name} screenshot ${i + 1}`}
                  width={400}
                  height={300}
                  class="w-full" 
                  loading="lazy" 
                />
              </a>
            ))}
          </div>
        </section>
      )}
    </article>
  </main>
  
  <Footer />
</Layout>
