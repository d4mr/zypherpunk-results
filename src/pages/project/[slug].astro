---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import MarkdownContent from '../../components/MarkdownContent.astro';
import { AwardsSection } from '../../components/AwardCard';
import { getAllProjects, getProjectBySlug } from '../../lib/awards';
import { getSponsorForAward, getBountyForAward } from '../../lib/sponsors';
import { fetchProject, extractSlugFromUrl, getImageUrl, getPictures, getLinks, type Project } from '../../lib/devfolio';

export async function getStaticPaths() {
  const allAwards = getAllProjects();
  
  const slugs = allAwards
    .map(award => extractSlugFromUrl(award.url))
    .filter((slug): slug is string => slug !== null);
  
  const paths = await Promise.all(
    slugs.map(async (slug) => {
      const project = await fetchProject(slug);
      if (!project) {
        console.warn(`Project not found on Devfolio: ${slug}`);
        return null;
      }
      return {
        params: { slug },
        props: { project },
      };
    })
  );
  
  return paths.filter((p): p is NonNullable<typeof p> => p !== null);
}

interface Props {
  project: Project;
}

const { slug } = Astro.params;
const { project } = Astro.props;
const awards = getProjectBySlug(slug!);

const favicon = getImageUrl(project._favicon);
const coverImg = getImageUrl(project._cover_img);
const pictures = getPictures(project.pictures);
const rawLinks = getLinks(project.links);
const builders = project.builders || [];
const hashtags = project.hashtags?.map((h) => h.hashtag.name) || [];
const totalUSD = awards?.totalUSD || 0;

// Parse video embed URL
function getVideoEmbed(url: string | null): string | null {
  if (!url) return null;
  const ytMatch = url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\s]+)/);
  if (ytMatch) return `https://www.youtube.com/embed/${ytMatch[1]}`;
  return null;
}

// Get icon and label for a URL
function getLinkInfo(url: string): { icon: string; label: string; type: string } {
  const hostname = new URL(url).hostname.replace("www.", "");
  
  // GitHub
  if (hostname === "github.com") {
    const path = new URL(url).pathname;
    return { 
      icon: "github", 
      label: path.split("/").filter(Boolean).slice(0, 2).join("/") || "GitHub",
      type: "github"
    };
  }
  
  // NPM
  if (hostname === "npmjs.com" || hostname === "npm.im") {
    return { icon: "npm", label: "npm", type: "npm" };
  }
  
  // Twitter/X
  if (hostname === "twitter.com" || hostname === "x.com") {
    return { icon: "twitter", label: "Twitter", type: "twitter" };
  }
  
  // YouTube
  if (hostname === "youtube.com" || hostname === "youtu.be") {
    return { icon: "youtube", label: "YouTube", type: "youtube" };
  }
  
  // Discord
  if (hostname === "discord.gg" || hostname === "discord.com") {
    return { icon: "discord", label: "Discord", type: "discord" };
  }
  
  // Telegram
  if (hostname === "t.me" || hostname === "telegram.me") {
    return { icon: "telegram", label: "Telegram", type: "telegram" };
  }
  
  // LinkedIn
  if (hostname === "linkedin.com") {
    return { icon: "linkedin", label: "LinkedIn", type: "linkedin" };
  }
  
  // Figma
  if (hostname === "figma.com") {
    return { icon: "figma", label: "Figma", type: "figma" };
  }
  
  // Notion
  if (hostname === "notion.so" || hostname === "notion.site") {
    return { icon: "notion", label: "Notion", type: "notion" };
  }
  
  // Medium
  if (hostname === "medium.com" || hostname.endsWith(".medium.com")) {
    return { icon: "medium", label: "Medium", type: "medium" };
  }
  
  // Docs/GitBook
  if (hostname.includes("gitbook") || hostname.includes("docs.")) {
    return { icon: "docs", label: "Docs", type: "docs" };
  }
  
  // Generic website
  return { icon: "link", label: hostname, type: "website" };
}

// Collect all links
const allLinks: Array<{ url: string; info: ReturnType<typeof getLinkInfo>; isPrimary?: boolean }> = [];

// Add Devfolio link first
const devfolioUrl = `https://devfolio.co/projects/${slug}`;
allLinks.push({
  url: devfolioUrl,
  info: { icon: "devfolio", label: "Devfolio", type: "devfolio" },
  isPrimary: true
});

if (project.source_code_url) {
  allLinks.push({ 
    url: project.source_code_url, 
    info: getLinkInfo(project.source_code_url),
    isPrimary: true 
  });
}

if (project.demo_url) {
  allLinks.push({ 
    url: project.demo_url, 
    info: { icon: "demo", label: "Live Demo", type: "demo" },
    isPrimary: true 
  });
}

rawLinks.forEach(link => {
  // Avoid duplicates
  if (link !== project.source_code_url && link !== project.demo_url) {
    allLinks.push({ url: link, info: getLinkInfo(link) });
  }
});

const videoEmbed = getVideoEmbed(project.video_url);

// Build sponsors map and bounties map for awards tooltips
const sponsorsMap: Record<string, any> = {};
const bountiesMap: Record<string, any> = {};
if (awards) {
  awards.awards.forEach(award => {
    const sponsor = getSponsorForAward(award.sponsor);
    if (sponsor) {
      sponsorsMap[award.sponsor] = sponsor;
    }
    const bounty = getBountyForAward(award.sponsor, award.track);
    const key = `${award.sponsor}-${award.track || ""}`;
    bountiesMap[key] = bounty;
  });
}
